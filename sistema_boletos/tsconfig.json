{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["./hardhat.config.ts", "./src/**/*.ts", "./test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
